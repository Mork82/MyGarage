<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.garage.ui.fragments.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_loginFragment_to_singUpFragment"
            app:destination="@id/singUpFragment" />
        <action
            android:id="@+id/action_loginFragment_to_recoverPassFragment"
            app:destination="@id/recoverPassFragment" />



    </fragment>
    <fragment
        android:id="@+id/singUpFragment"
        android:name="com.example.garage.ui.fragments.SingUpFragment"
        android:label="SingUpFragment"
        tools:layout="@layout/fragment_sing_up">
        <action
            android:id="@+id/action_singUpFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/recoverPassFragment"
        android:name="com.example.garage.ui.fragments.RecoveyPassFragment"
        android:label="fragment_recover_pass"
        tools:layout="@layout/fragment_recovery_pass" >
        <action
            android:id="@+id/action_recoverPassFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>


</navigation>